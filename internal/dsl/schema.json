{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Rocketship Test Suite Schema",
  "description": "Schema for Rocketship test suite definition files",
  "type": "object",
  "required": ["name", "version", "tests"],
  "properties": {
    "name": {
      "type": "string",
      "description": "Name of the test suite"
    },
    "description": {
      "type": "string",
      "description": "Description of the test suite"
    },
    "version": {
      "type": "string",
      "description": "Version of the test suite definition",
      "pattern": "^v\\d+\\.\\d+\\.\\d+$"
    },
    "tests": {
      "type": "array",
      "description": "Array of test cases",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["name", "steps"],
        "properties": {
          "name": {
            "type": "string",
            "description": "Name of the test case"
          },
          "steps": {
            "type": "array",
            "description": "Array of test steps to execute",
            "minItems": 1,
            "items": {
              "type": "object",
              "required": ["name", "plugin", "config"],
              "properties": {
                "name": {
                  "type": "string",
                  "description": "Name of the test step"
                },
                "plugin": {
                  "type": "string",
                  "description": "Plugin to use for this step",
                  "enum": ["http", "delay", "aws/s3", "aws/sqs", "aws/dynamodb"]
                },
                "config": {
                  "type": "object",
                  "description": "Configuration for the plugin",
                  "oneOf": [
                    {
                      "title": "Delay Plugin Configuration",
                      "properties": {
                        "duration": {
                          "type": "string",
                          "description": "Duration for the delay plugin",
                          "pattern": "^\\d+[smh]$"
                        }
                      },
                      "required": ["duration"],
                      "additionalProperties": false
                    },
                    {
                      "title": "HTTP Plugin Configuration",
                      "properties": {
                        "method": {
                          "type": "string",
                          "description": "HTTP method",
                          "enum": ["GET", "POST", "PUT", "DELETE", "PATCH", "HEAD", "OPTIONS"]
                        },
                        "url": {
                          "type": "string",
                          "description": "URL to request, may contain variable references like {{ var_name }}"
                        },
                        "body": {
                          "type": "string",
                          "description": "Request body, often a JSON string"
                        },
                        "headers": {
                          "type": "object",
                          "description": "HTTP headers to include with the request",
                          "additionalProperties": {
                            "type": "string"
                          }
                        }
                      },
                      "required": ["method", "url"],
                      "additionalProperties": false
                    },
                    {
                      "title": "AWS Plugin Configuration",
                      "description": "Configuration for AWS plugins (S3, SQS, DynamoDB)",
                      "additionalProperties": true
                    }
                  ]
                },
                "assertions": {
                  "type": "array",
                  "description": "Assertions to validate the response",
                  "items": {
                    "type": "object",
                    "required": ["type", "expected"],
                    "properties": {
                      "type": {
                        "type": "string",
                        "description": "Type of assertion",
                        "enum": ["status_code", "json_path"]
                      },
                      "expected": {
                        "description": "Expected value for the assertion"
                      },
                      "path": {
                        "type": "string",
                        "description": "JSON path for json_path assertion type"
                      }
                    },
                    "allOf": [
                      {
                        "if": {
                          "properties": { "type": { "enum": ["json_path"] } }
                        },
                        "then": {
                          "required": ["path"]
                        }
                      }
                    ]
                  }
                },
                "save": {
                  "type": "array",
                  "description": "Response values to save for use in later steps",
                  "items": {
                    "type": "object",
                    "required": ["json_path", "as"],
                    "properties": {
                      "json_path": {
                        "type": "string",
                        "description": "JSON path to extract from response"
                      },
                      "as": {
                        "type": "string",
                        "description": "Variable name to save the extracted value as"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}